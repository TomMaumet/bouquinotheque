<div class="container"><% @books.each do |book| %>
  <%= link_to book_path(book), class:"book-card mb-3" do %>
    <%= image_tag book.image_url, alt: book.title, class: "card-image" %>
    <div class="card-content d-flex align-items-center">
        <div>
          <h1><%= book.title %></h1>
          <p><%= book.author %></p>
        </div>
        <div class="ratings">
          <i class="fa-solid fa-star"></i><%= book.ratings %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
