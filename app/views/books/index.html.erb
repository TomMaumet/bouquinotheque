<% @title = "Librairie" %>
<div data-controller="update-filters-input">
  <div class="container">
    <%= form_with url: readings_path, method: :get, html: {class: "d-flex mt-3 justify-content-evenly", data: {update_filters_input_target: "form"}} do |f| %>
      <div>
        <%= select_tag :tri,
          options_for_select([['Titre A - Z',"title a to z"], ['Titre Z - A',"title z to a"], ['Auteur.ice A - Z',"author a to z"], ['Auteur.ice Z - A',"author z to a"]],params[:tri]),
          include_blank: "↑↓", class: "form-control", style: "width: 30px", data: { update_filters_input_target: "inputTri", action: "change->update-filters-input#tri" } %>
      </div>
      <div>
        <%= f.text_field :genre, placeholder: "Genre", style: "width: 150px", class: "form-control", list: "genre-select", data: {update_filters_input_target: "inputGenre", action: "keyup->update-filters-input#genre"} %>
          <datalist id="genre-select">
            <% @genres.each do |genre| %>
            <option value="<%= genre %>"><%= genre %></option>
            <% end %>
          </datalist>
      </div>
      <div>
        <%= f.text_field :author, placeholder: "Auteur.ice.s", style: "width: 150px", class: "form-control", list: "author-select", data: {update_filters_input_target: "inputAuthor", action: "keyup->update-filters-input#author"} %>
          <datalist id="author-select">
            <% @authors.each do |author| %>
              <option value="<%= author %>"><%= author %></option>
            <% end %>
          </datalist>
      </div>
    <% end %>
  </div>

<div class="container p-3" data-update-filters-input-target="books">
  <%= render 'book_partial', books: @books %>
</div>
</div>
