<div class="container book-show">
  <div class="h1">
    <%= @book.title %>
    <h4><i class="fa-solid fa-star"></i><%= @book.ratings %></h4>
  </div>
  <h3><%= @book.author %></h3>
  <%= image_tag @book.image_url, alt: @book.title, class: "book-cover"%>
  <ul>
    <li>
      <%= @book.publisher %>, <%= @book.publishing_year %>
    </li>
    <li>
      <%= @book.book_type %>: <%= @book.genre %>
    </li>
  </ul>
  <div data-controller="display-all-summary">
    <p data-display-all-summary-target="summary"><%= @book.summary.truncate(200, separator: ' ') %> <a data-display-all-summary-target="show" data-action="click->display-all-summary#display" >lire plus</a></p>
    <p data-display-all-summary-target="summary_all" class="d-none"><%= @book.summary %> <a data-display-all-summary-target="hide" data-action="click->display-all-summary#display">lire mois</a></p>
  </div>
