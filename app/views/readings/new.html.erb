<% @title = "Ajouter un livre à ma bibliothèque" %>
<div class="container white-background m-3" data-controller="scanner"><center>
  <button class="btn btn-danger" data-action="click->scanner#scan">Scanner mon livre</button><br></center>
  <%= simple_form_for @reading do |f| %>
    <%= f.text_field :title, placeholder: "Titre", style: "width: 100px", class: "form-control", list: "title-select" %>
          <datalist id="title-select">
            <% @titles.each do |title| %>
            <option value="<%= title %>"><%= title %></option>
            <% end %>
          </datalist>
    <%= f.input :EAN, input_html: { data: { scanner_target: "EAN" } } %>
    <center><%= f.button :submit, "Ajouter", class: "btn btn-danger", :input_html => { :value => :EAN } %></center>
  <% end %>
  <div id="interactive" class="viewport">
  </div>
</div>
