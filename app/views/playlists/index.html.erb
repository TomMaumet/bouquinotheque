<% @title = "Mes listes de favoris" %>


<div class="container container-playlist" data-controller='add-playlist'>
    <div class="button-add btn btn-danger" data-action="click->add-playlist#open_page">Nouvelle liste</div>
    <div class=" add-pages container d-none" data-add-playlist-target="page" >
      <i id="cross_pages"class="fa-solid fa-xmark fa-2xl" data-action="click->add-playlist#close_page"></i>
    <div class="row justify-content-center">
      <div class="form col-6 p-2">
        <h2>Donnez un nom Ã  votre liste de favoris</h2>
        <%= simple_form_for @playlist_new do |f| %>
          <%= f.input :title, label: "Titre" %>
          <%= f.button :submit, value: "Valider" , class: "btn btn-danger"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% @playlists.each do |playlist| %>
    <div class="yes">
      <h3><%= link_to playlist.title, playlist_path(playlist), class: "text-decoration-none" %></h3>
    </div>
    <div class="container-detail">
      <% playlist.readings.first(5).each do |reading| %>
        <% link_to @playlist %><div class="cards-playlist col-4 p-2">
            <%= image_tag reading.book.image_url, class: "image-book" %>
          <div class="text-playlist d-inline">
            <h5><%= reading.book.author %></h5>
            <p><%= reading.book.title %></p>
          </div>
        </div>
      <% end  %>
    </div>
  <% end %>
</div>
